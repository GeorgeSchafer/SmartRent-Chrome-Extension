
{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  },
  "source": {
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "sourceType": "module",
  "plugins": ["plugins/markdown", "plugins/summarize"],
  "opts": {
    "template": "templates/default",  
    "encoding": "utf8",               
    "destination": "./out/",          
    "recurse": true,
    "tutorials": ""
},
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "layoutFile": "./templates/SmartRent.tmpl",
      "outputSourceFiles": true
    },
    "source": {
      "include": [
        "./scripts/common.js",
        "./scripts/devices.js",
        "./scripts/deviceClass.js",
        "./scripts/codeClass.js",
        "./scripts/options.js",
        "./scripts/SmartRentApi.js"
      ],
      "exclude": [
        ""
      ],
      "includePattern": ".+\\.js(doc|x)?$",
      "excludePattern": "(^|\\/|\\\\)_"
    }
  }
}
